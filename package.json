{
  "name": "tsc-files",
  "version": "0.0.0",
  "description": "A tiny tool to run tsc on specific files without ignoring tsconfig.json",
  "license": "MIT",
  "author": "Gustavo P. Cardoso <https://twitter.com/gustavo_pch>",
  "repository": "github:gustavopch/tsc-files",
  "bin": {
    "tsc-files": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "typescript": ">=3"
  },
  "devDependencies": {
    "typescript": "4.1.3"
  }
}
